<h1><%= @list.name %></h1>
<h2>Movies in this list:</h2>
<ul>
  <% @list.movies.each do |movie| %>
    <li>
    <span><%= movie.title %> - <%= movie.rating %></span>
    </li>
  <% end %>
</ul>

<h2>Bookmarks in this list:</h2>
<ul class="bookmark-list">
  <% @list.bookmarks.each do |bookmark| %>  <!-- Loop through each bookmark -->
    <li class="list-group-item">
      <%= bookmark.comment %>  <!-- Assuming the bookmark has a 'comment' attribute -->
      <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>  <!-- Delete link for each bookmark -->
    </li>
  <% end %>
</ul>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "add-bookmark-btn" %>
