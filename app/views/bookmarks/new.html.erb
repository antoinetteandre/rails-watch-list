<h1>New Bookmark</h1>
<%= form_with model: [ @list, @bookmark ] do |form| %>
  <% if @bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
      <ul>
        <% @bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :movie_id, "Select Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit "Add Bookmark" %>
  </div>
<% end %>
<%= link_to 'Back to List', list_path(@list) %>
